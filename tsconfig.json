{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/declaration",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "exclude": ["v6"]
}
